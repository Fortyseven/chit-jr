{
    "name": "Chit Jr.",
    "version": "1.0",
    "homepage_url": "https://network47.org/",
    "author": "Fortyseven",
    "manifest_version": 2,
    "browser_specific_settings": {
        "gecko": {
            "id": "chitjr@network47.org"
        }
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "scripting",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "48": "favicon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "sidebar_action": {
        "default_panel": "sidebar/index.html",
        "default_title": "Chit Jr.",
        "open_at_install": true
    }
}